<Window x:Class="NebulaCore.SteamAlert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nebula Notification" Height="200" Width="400"
        WindowStyle="None" ResizeMode="NoResize" Background="Transparent"
        AllowsTransparency="True" WindowStartupLocation="CenterScreen">

	<Border Background="#1B2838" CornerRadius="5" BorderBrush="#66C0F4" BorderThickness="1">
		<Border.Effect>
			<DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.8"/>
		</Border.Effect>

		<Grid Margin="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<TextBlock x:Name="lblTitulo" Text="CONFIRMACIÓN" Foreground="#66C0F4" FontSize="16" FontWeight="Bold"/>

			<TextBlock x:Name="lblMensaje" Grid.Row="1" Text="¿Deseas comprar este juego?"
                       Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="14" Margin="0,10"/>

			<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
				<Button x:Name="btnCancelar" Content="CANCELAR" Click="BtnCancelar_Click"
                        Background="Transparent" Foreground="#AAA" Margin="0,0,10,0" Padding="10,5" BorderThickness="0" Cursor="Hand"/>

				<Button x:Name="btnAceptar" Content="ACEPTAR" Click="BtnAceptar_Click"
                        Background="#A4D007" Foreground="#1B2838" FontWeight="Bold" Padding="20,5" Cursor="Hand">
					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="3"/>
						</Style>
					</Button.Resources>
				</Button>
			</StackPanel>
		</Grid>
	</Border>
</Window>