<Window x:Class="NebulaCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nebula Login" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

	<Window.Resources>
		<Style x:Key="InputStyle" TargetType="Control">
			<Setter Property="Background" Value="#1E1E1E"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderBrush" Value="#444"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Padding" Value="10,0"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>

		<Style TargetType="PasswordBox">
			<Setter Property="Background" Value="#1E1E1E"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="CaretBrush" Value="White"/>
			<Setter Property="BorderBrush" Value="#444"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Padding" Value="10,5"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Style.Triggers>
				<Trigger Property="IsFocused" Value="True">
					<Setter Property="BorderBrush" Value="#66C0F4"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="TextBox">
			<Setter Property="Background" Value="#1E1E1E"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="CaretBrush" Value="White"/>
			<Setter Property="BorderBrush" Value="#444"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Padding" Value="10,0"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Style.Triggers>
				<Trigger Property="IsFocused" Value="True">
					<Setter Property="BorderBrush" Value="#66C0F4"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="BtnCerrarStyle" TargetType="Button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="#888"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#C62828"/>
					<Setter Property="Foreground" Value="White"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Border Background="#121212" CornerRadius="10" BorderBrush="#333" BorderThickness="1">
		<Border.Effect>
			<DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.7" ShadowDepth="5"/>
		</Border.Effect>

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="30"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Grid Grid.Row="0" Background="Transparent" MouseDown="BarraTitulo_MouseDown">
				<TextBlock Text="NEBULA LAUNCHER" Foreground="#555" FontSize="10" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0"/>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
					<Button Content="✕" Click="BtnCerrar_Click" Style="{StaticResource BtnCerrarStyle}" Width="40" Height="30" FontSize="12"/>
				</StackPanel>
			</Grid>

			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1.2*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Border Grid.Column="0" Background="#1B2838" CornerRadius="0,0,0,10" Margin="1,0,0,1">
					<Grid>
						<Image Source="https://store.cloudflare.steamstatic.com/public/shared/images/header/logo_steam.svg?t=962016"
                               Opacity="0.1" Width="200"/>
						<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
							<TextBlock Text="NEBULA" Foreground="White" FontSize="40" FontWeight="Black" HorizontalAlignment="Center"/>
							<TextBlock Text="GAMES" Foreground="#66C0F4" FontSize="40" FontWeight="Light" HorizontalAlignment="Center"/>
							<TextBlock Text="Tu universo de juegos" Foreground="#888" Margin="0,10,0,0" HorizontalAlignment="Center"/>
						</StackPanel>
					</Grid>
				</Border>

				<Grid Grid.Column="1" Margin="40">
					<StackPanel VerticalAlignment="Center">
						<TextBlock Text="INICIAR SESIÓN" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

						<TextBlock Text="USUARIO" Foreground="#AAA" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
						<TextBox x:Name="txtUsuario" Height="40" Margin="0,0,0,20"/>

						<TextBlock Text="CONTRASEÑA" Foreground="#AAA" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
						<PasswordBox x:Name="txtPassword" Height="40" Margin="0,0,0,5"/>

						<TextBlock x:Name="lblMensaje" Foreground="#FF5555" FontSize="12" Margin="0,5,0,20" TextWrapping="Wrap"/>

						<Button x:Name="BtnLogin" Content="ENTRAR" Click="BtnLogin_Click"
                                Background="#66C0F4" Foreground="#121212" FontWeight="Bold" Height="45" FontSize="14" Cursor="Hand">
							<Button.Resources>
								<Style TargetType="Border">
									<Setter Property="CornerRadius" Value="3"/>
								</Style>
							</Button.Resources>
						</Button>

						<TextBlock Text="¿No tienes cuenta? Regístrate"
                                   Foreground="#888" FontSize="12" HorizontalAlignment="Center" Margin="0,20,0,0"
                                   Cursor="Hand" MouseDown="BtnRegister_Click"/>
					</StackPanel>
				</Grid>
			</Grid>
		</Grid>
	</Border>
</Window>