<Window x:Class="NebulaCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nebula Login" Height="550" Width="400"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" AllowsTransparency="True">

    <Border CornerRadius="10" Background="{StaticResource NebulaDarkBg}" BorderBrush="#2a475e" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#121418" MouseLeftButtonDown="TitleBar_MouseDown">
                <TextBlock Text="NEBULA CORE // ACCESS" Foreground="#666" VerticalAlignment="Center" Margin="15,0" FontSize="10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="_" Click="BtnMinimize_Click" Width="40" Background="Transparent" Foreground="White" BorderThickness="0"/>
                    <Button Content="X" Click="BtnClose_Click" Width="40" Background="Transparent" Foreground="#ff5c5c" BorderThickness="0" FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.Background>
                    <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="1" RadiusY="1">
                        <GradientStop Color="#2a475e" Offset="0"/>
                        <GradientStop Color="#171a21" Offset="0.8"/>
                    </RadialGradientBrush>
                </Grid.Background>

                <StackPanel Margin="50,20" VerticalAlignment="Center">
                    <Path Data="M 20,50 L 50,20 L 80,50 L 50,80 Z" Fill="{StaticResource NebulaAccent}" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Path.Effect>
                            <DropShadowEffect Color="#66c0f4" BlurRadius="20" ShadowDepth="0"/>
                        </Path.Effect>
                    </Path>

                    <TextBlock Text="NEBULA" Foreground="White" FontSize="32" FontWeight="Black" HorizontalAlignment="Center" FontFamily="Arial"/>
                    <TextBlock Text="IDENTITY SYSTEM" Foreground="{StaticResource NebulaAccent}" FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,40"/>

                    <TextBlock Text="USERNAME" Foreground="{StaticResource NebulaText}" FontSize="10" FontWeight="Bold" Margin="0,5"/>
                    <TextBox x:Name="txtUsuario" Height="40" VerticalContentAlignment="Center"/>

                    <TextBlock Text="PASSWORD" Foreground="{StaticResource NebulaText}" FontSize="10" FontWeight="Bold" Margin="0,15,0,5"/>
                    <Grid>
                        <PasswordBox x:Name="txtPassword" Height="40" VerticalContentAlignment="Center" PasswordChanged="TxtPassword_PasswordChanged"/>
                        <TextBox x:Name="txtPasswordVisible" Height="40" VerticalContentAlignment="Center" Visibility="Collapsed" TextChanged="TxtPasswordVisible_TextChanged"/>

                        <ToggleButton x:Name="btnShowPass" Width="30" Height="30" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Click="BtnShowPass_Click" Cursor="Hand" Margin="0,0,5,0">
                            <Path Data="M12,4.5C7,4.5 2.73,7.61 1,12c1.73,4.39 6,7.5 11,7.5s9.27-3.11 11-7.5C21.27,7.61 17,4.5 12,4.5z M12,17c-2.76,0-5-2.24-5-5s2.24-5 5-5s5,2.24 5,5S14.76,17 12,17z M12,9c-1.66,0-3,1.34-3,3s1.34,3 3,3s3-1.34 3-3S13.66,9 12,9z" Fill="#666" Stretch="Uniform" Width="15"/>
                        </ToggleButton>
                    </Grid>

                    <TextBlock x:Name="lblMensaje" Text="" Foreground="#ff5c5c" FontSize="12" Margin="0,10" TextAlignment="Center" Height="20"/>

                    <Button x:Name="btnLogin" Content="CONNECT" Height="45" Click="BtnLogin_Click" Margin="0,10,0,0">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                        </Button.Effect>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="¿No tienes cuenta? " Foreground="#888" FontSize="12"/>
                        <TextBlock Text="Crear ID" Foreground="{StaticResource NebulaAccent}" Cursor="Hand" MouseLeftButtonDown="BtnRegister_Click" FontWeight="Bold" TextDecorations="Underline"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>