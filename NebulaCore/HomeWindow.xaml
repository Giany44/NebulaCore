<Window x:Class="NebulaCore.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nebula Steam" Height="750" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#171A21">

	<Window.Resources>
		<SolidColorBrush x:Key="SteamDark" Color="#171A21"/>
		<SolidColorBrush x:Key="SteamLight" Color="#1B2838"/>
		<SolidColorBrush x:Key="SteamAccent" Color="#66C0F4"/>
		<SolidColorBrush x:Key="SteamGreen" Color="#A4D007"/>

		<Style x:Key="BtnAccionStyle" TargetType="Button">
			<Setter Property="Background" Value="{StaticResource SteamGreen}"/>
			<Setter Property="Foreground" Value="#1b2838"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Padding" Value="15,5"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" CornerRadius="2">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<DataTrigger Binding="{Binding TextoBoton}" Value="JUGAR">
					<Setter Property="Background" Value="{StaticResource SteamAccent}"/>
					<Setter Property="Foreground" Value="Black"/>
				</DataTrigger>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Opacity" Value="0.8"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="MenuTextStyle" TargetType="TextBlock">
			<Setter Property="Foreground" Value="#8F98A0"/>
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="20,0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Foreground" Value="White"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="90"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Background="#171A21" MouseDown="Window_MouseDown">
			<Grid.Effect>
				<DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.6"/>
			</Grid.Effect>

			<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0">
				<TextBlock Text="NEBULA" Foreground="White" FontSize="32" FontWeight="Black"/>
				<TextBlock Text="CORE" Foreground="{StaticResource SteamAccent}" FontSize="32" FontWeight="Light" Margin="5,0,40,0"/>

				<TextBlock x:Name="menuTienda" Text="TIENDA" MouseDown="BtnMenuTienda_Click" Style="{StaticResource MenuTextStyle}" Foreground="{StaticResource SteamAccent}"/>
				<TextBlock x:Name="menuBiblioteca" Text="BIBLIOTECA" MouseDown="BtnMenuBiblioteca_Click" Style="{StaticResource MenuTextStyle}"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,30,0">
				<TextBox x:Name="txtBuscar" Width="200" Height="30" VerticalContentAlignment="Center" Background="#2A475E" Foreground="White" BorderThickness="0" Padding="10,0" Tag="Buscar..." TextChanged="TxtBuscar_TextChanged"/>
				<TextBlock Text="🔍" Foreground="#66C0F4" VerticalAlignment="Center" Margin="-25,0,20,0"/>

				<Border Background="#2A475E" CornerRadius="3" Padding="15,5" Margin="10,0">
					<TextBlock x:Name="txtUsuario" Text="JUGADOR" Foreground="{StaticResource SteamAccent}" FontWeight="Bold"/>
				</Border>
				<Button Content="Salir" Click="BtnLogout_Click" Background="Transparent" Foreground="#8F98A0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
			</StackPanel>
		</Grid>

		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="220"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Border Grid.Column="0" Background="#1B2838" Padding="15,30">
				<StackPanel>
					<TextBlock Text="CATEGORÍAS" Foreground="#66C0F4" FontWeight="Bold" Margin="10,0,0,15"/>
					<Button Content="Todo" Click="BtnFiltro_Click" Tag="Todo" Background="Transparent" Foreground="#BBB" HorizontalAlignment="Left" Margin="10,5"/>
					<Button Content="Acción" Click="BtnFiltro_Click" Tag="Acción" Background="Transparent" Foreground="#BBB" HorizontalAlignment="Left" Margin="10,5"/>
					<Button Content="Aventura" Click="BtnFiltro_Click" Tag="Aventura" Background="Transparent" Foreground="#BBB" HorizontalAlignment="Left" Margin="10,5"/>
					<Button Content="RPG" Click="BtnFiltro_Click" Tag="RPG" Background="Transparent" Foreground="#BBB" HorizontalAlignment="Left" Margin="10,5"/>
					<Button Content="Deportes" Click="BtnFiltro_Click" Tag="Deportes" Background="Transparent" Foreground="#BBB" HorizontalAlignment="Left" Margin="10,5"/>
				</StackPanel>
			</Border>

			<ScrollViewer Grid.Column="1" Background="#12161C" Padding="30">
				<StackPanel>
					<TextBlock x:Name="lblTituloSeccion" Text="DESTACADOS" Foreground="White" FontSize="22" Margin="0,0,0,20" FontWeight="Light"/>

					<ItemsControl x:Name="listaJuegos">
						<ItemsControl.ItemsPanel>
							<ItemsPanelTemplate>
								<WrapPanel Orientation="Horizontal"/>
							</ItemsPanelTemplate>
						</ItemsControl.ItemsPanel>

						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<Border Width="260" Height="380" Margin="10" Background="#16202D" CornerRadius="0">
									<Border.Effect>
										<DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.5"/>
									</Border.Effect>
									<Grid>
										<Grid.RowDefinitions>
											<RowDefinition Height="200"/>
											<RowDefinition Height="*"/>
											<RowDefinition Height="60"/>
										</Grid.RowDefinitions>

										<Image Source="{Binding ImagenUrl}" Stretch="UniformToFill" Grid.Row="0"/>

										<StackPanel Grid.Row="1" Margin="15">
											<TextBlock Text="{Binding Titulo}" Foreground="White" FontSize="16" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
											<TextBlock Text="{Binding Fabricante}" Foreground="#66C0F4" FontSize="11" Margin="0,2"/>
											<TextBlock Text="{Binding Genero}" Foreground="#888" FontSize="12" Margin="0,5"/>
										</StackPanel>

										<Grid Grid.Row="2" Background="#0C1015" Margin="0">
											<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0">
												<TextBlock Text="{Binding PrecioFormato}" Foreground="#AAA" VerticalAlignment="Center" Margin="0,0,15,0"/>

												<Button Content="{Binding TextoBoton}" Tag="{Binding Id}" Click="BtnAccion_Click" Style="{StaticResource BtnAccionStyle}"/>
											</StackPanel>
										</Grid>
									</Grid>
								</Border>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</StackPanel>
			</ScrollViewer>
		</Grid>
	</Grid>
</Window>