<Window x:Class="NebulaCore.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro - Nebula" Height="500" Width="350"
        WindowStartupLocation="CenterScreen" Background="#1A1A1A">
	<Grid>
		<StackPanel Margin="30" VerticalAlignment="Center">
			<TextBlock Text="NUEVO USUARIO" Foreground="Cyan" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

			<TextBlock Text="USUARIO" Foreground="White" Margin="0,5"/>
			<TextBox x:Name="txtRegUsuario" Height="30" Background="#333333" Foreground="White" BorderBrush="Cyan"/>

			<TextBlock Text="EMAIL" Foreground="White" Margin="0,10,0,5"/>
			<TextBox x:Name="txtRegEmail" Height="30" Background="#333333" Foreground="White" BorderBrush="Cyan"/>

			<TextBlock Text="CONTRASEÑA" Foreground="White" Margin="0,10,0,5"/>
			<PasswordBox x:Name="txtRegPassword" Height="30" Background="#333333" Foreground="White" BorderBrush="Cyan"/>

			<Button Content="CREAR CUENTA" Height="40" Margin="0,30,0,10" Background="Cyan" FontWeight="Bold" Click="BtnRegistrar_Click"/>
			<Button Content="CANCELAR" Background="Transparent" Foreground="Gray" BorderThickness="0" Click="BtnCancelar_Click"/>
		</StackPanel>
	</Grid>
</Window>